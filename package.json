{
  "name": "all-in-one-productivity-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "Full stack app (Vite client + Express server)",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/public",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.cjs --external:esbuild --external:@replit/vite-plugin-cartographer --external:@replit/vite-plugin-dev-banner --external:@replit/vite-plugin-runtime-error-modal",
    "start": "NODE_ENV=production node dist/index.cjs",
    "preview": "NODE_ENV=production tsx dist/index.cjs"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "tsx": "^3.12.0",
    "vite": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "license": "MIT",
  "author": "your-name <you@example.com>"
}
